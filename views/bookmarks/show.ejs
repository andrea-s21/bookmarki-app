<%- include('../partials/header') %>

<h3>Bookmark Details</h3>
<section id="show-page">
    <h4>Title: </h4>
  <div>
    <%= bookmark.title %>
  </div>
  <h4>Description: </h4>
  <div>
    <%= bookmark.description %>
  </div>
  <h4>URL: </h4>
  <div>
    <%= bookmark.url %>
  </div>
  <h4>Category: </h4>
  <div>
    <%= bookmark.category %>
  </div>
</section>
<h3>Edit Bookmark</h3> 
<%= console.log(bookmark._id.toString())  %> 
<form action="/bookmarks/<%= bookmark._id %>?_method=PUT" method="POST">
    <label>Title:
        <input type="text" name="title" value="<%= bookmark.title  %>" >
    </label><br>
    <label>Description:
        <input type="text" name="description" value="<%= bookmark.description  %>">
    </label><br>
    <label>URL:
        <!-- link should be clickable -->
      <input type="link" name="url" value="<%= bookmark.url  %>">
    </label><br>
    <label>Category:
        <select name="category">
            <option <%= bookmark.category === 'News' ? 'selected' : '' %>  value="News">News</option>
            <option <%= bookmark.category === 'Financial' ? 'selected' : '' %>  value="Financial">Financial</option>
            <option <%= bookmark.category === 'School' ? 'selected' : '' %>  value="School">School</option>
            <option <%= bookmark.category === 'Other' ? 'selected' : '' %>  value="Other">Other</option>
        </select>
    </label><br>
    <button type="submit">Save</button>
  </form>
  <%- include('../partials/footer') %>