<%- include('../partials/header') %>
    <main>
        <h2>Edit Bookmark</h2>

        <form id="edit-form" action="/bookmarks/<%= bookmark._id %>?_method=PUT" method="POST">
            <label>Title:
                <input type="text" name="title" value="<%= bookmark.title  %>">
            </label><br>
            <label>Description:
                <input name="description" value="<%= bookmark.description  %>"></input>
            </label><br>
            <label>URL:
                <input type="url" name="url" value="<%= bookmark.url  %>">
            </label><br>
            <label>Category:
                <select name="category">
                    <option <%=bookmark.category==='News' ? 'selected' : '' %> value="News">News</option>
                    <option <%=bookmark.category==='Financial' ? 'selected' : '' %> value="Financial">Financial</option>
                    <option <%=bookmark.category==='School' ? 'selected' : '' %> value="School">School</option>
                    <option <%=bookmark.category==='Other' ? 'selected' : '' %> value="Other">Other</option>
                </select>
            </label><br>
            <input id="save-btn" type="submit" value="Save">
        </form>
        <form action="/bookmarks/<%= bookmark._id %>?_method=DELETE" method="POST">
            <input id="delete-btn" type="submit" name="" value="Delete Bookmark">
        </form>
    </main>
    <%- include('../partials/footer') %>