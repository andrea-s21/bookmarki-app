<%- include('../partials/header') %>

<h3>Edit Bookmark</h3> 

<form action="/bookmarks/<%= bookmark._id %>?_method=PUT" method="POST">
    <label>Title:
        <input type="text" name="title" value="<%= bookmark.title  %>" >
    </label><br>
    <label>Description:
        <input type="text" name="description" value="<%= bookmark.description  %>">
    </label><br>
    <label>URL:
        <!-- link should be clickable -->
      <input type="link" name="url" value="<%= bookmark.url  %>"><br>
    <input type="submit" value="Save">
</form>
<form action="/bookmarks/<%= bookmark._id %>?_method=DELETE" method="POST">
    <input type="submit" name="" value="Delete Bookmark">
</form>

